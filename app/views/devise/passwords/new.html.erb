<script>
    jQuery(document).ready(function(){
        // binds form submission and fields to the validation engine
        jQuery("#new_user").validationEngine();
    });

</script>
<!----------------------------------------------------------------------------------->
<section id="forms">
  <div class="row">
    <div class="span10 offset1">
      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :class => "well form-search" ,:method => :post }) do |f| %>
          <fieldset>
          <legend>Forgot your password?</legend>
          <%= devise_error_messages! %>
          <%= f.email_field :email,:class => "validate[required, custom[email]], input-small",placeholder: "Email" %>
          <%= f.submit "Send me reset password instructions",class:"btn" %>
          </fieldset>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>