
<script>
		jQuery(document).ready(function(){
			// binds form submission and fields to the validation engine
			jQuery("#new_user").validationEngine();
		});
            
</script>
 <!--------------------------------------------------------------->
<section id="forms">
  <div class="row">
    <div class="span10 offset1">
      <%= form_for(resource, :as => resource_name, html:{:class =>"well form-horizontal" , id: "new_user"},:url => session_path(resource_name)) do |f| %>

          <fieldset>
            <legend>Sign In</legend>
            <div class="control-group">
              <%= f.label :email ,class: "control-label"%>
              <div class="controls">
                <%= f.email_field :email,:class => "validate[required, custom[email]],input-xlarge" %>
              </div>
            </div>
            <div class="control-group">
              <%= f.label :password ,class: "control-label" %>
              <div class="controls">
                <%= f.password_field :password ,:type => "password",:class => "validate[required],input-xlarge"%>
              </div>
            </div>
            <% if devise_mapping.rememberable? -%>
                <div class="controls">

                  <%= f.label :remember_me ,class: "control-label"%>
                  <div class="controls">
                    <%= f.check_box :remember_me %>
                  </div>
                </div>
                <div class="form-actions">
                  <%= f.submit "Sign in", :class=>'btn btn-primary'%>
                  <button type="reset" class="btn">Cancel</button>
                </div>
            <% end %>
           <%= render "devise/shared/links" %>
          </fieldset>
      <% end %>
    </div>
  </div>
</section>
