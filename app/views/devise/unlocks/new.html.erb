<section id="forms">
  <div class="row">
    <div class="span10 offset1">
      <%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :class => "well form-search",:method => :post }) do |f| %>
          <fieldset>
            <legend>Resend unlock instructions</legend>
            <%= devise_error_messages! %>

            <%= f.email_field :email, placehoder:"Email" , class:"input-small" %>
            <%= f.submit "Resend unlock instructions", class:"btn"%>
          </fieldset>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>