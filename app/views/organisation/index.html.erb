<%- model_class = Organisation -%>
<section id="tables">
  <div class="page-header">
    <h1>
      Organisation
    </h1>
  </div>
  <table class="table table-bordered table-striped table-hover" >
    <thead>
    <tr>
      <th>
        Organisation
      </th>
      <th>
        <%= model_class.human_attribute_name(:name) %>
      </th>
    </tr>
    </thead>
    <tbody>
    <% @organisations.each do |organisation| %>
        <tr>
          <td>
            <ul class="thumbnails">
              <li class="span1" >
                <%= link_to image_tag(organisation.image_url(:thumb)),organisation_show_path(:organisation_id => organisation.id) %>
              </li>
            </ul>
          </td>
          <td><%= organisation.name %></td>
          <td>
            <%= link_to t('Donate'),organisation_show_path(:organisation_id => organisation.id), :class =>"btn btn-primary btn-small" %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</section>